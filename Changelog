      LETO_VARINCR( cGroupName, cVarName )                 --> nValue
      LETO_VARDECR( cGroupName, cVarName )                 --> nValue
      LETO_VARDEL( cGroupName, cVarName )                  --> lSuccess
      LETO_VARGETLIST( [cGroupName] )                      --> aList
